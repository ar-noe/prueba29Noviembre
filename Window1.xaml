<Window x:Class="HOLACHICOS.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Login - CBA" Height="650" Width="480"
        WindowStartupLocation="CenterScreen"
        Background="#f8f6f6">

    <ScrollViewer VerticalScrollBarVisibility="Auto">

        <Grid Margin="25">

            <Grid.Resources>

                <!-- COLOR PRINCIPAL -->
                <SolidColorBrush x:Key="PrimaryColor" Color="#ec1313"/>

                <!-- ========== BOTÓN PRINCIPAL ========== -->
                <Style TargetType="Button" x:Key="PrimaryButton">
                    <Setter Property="Background" Value="#ec1313"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="FontSize" Value="16"/>
                    <Setter Property="Height" Value="45"/>
                    <Setter Property="Margin" Value="0,10,0,0"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="10"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>


                <!-- ========== WATERMARK TEXTBOX ========== -->
                <Style x:Key="WatermarkTextBox" TargetType="TextBox">
                    <Setter Property="Height" Value="45"/>
                    <Setter Property="Padding" Value="10"/>
                    <Setter Property="BorderBrush" Value="#d1d1d1"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TextBox">
                                <Grid>
                                    <ScrollViewer x:Name="PART_ContentHost"/>
                                    <TextBlock x:Name="Watermark"
                                               Text="{TemplateBinding Tag}"
                                               Foreground="#896161"
                                               Margin="12,0,0,0"
                                               VerticalAlignment="Center"
                                               Opacity=".7"
                                               IsHitTestVisible="False"/>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="Text" Value="">
                                        <Setter TargetName="Watermark" Property="Visibility" Value="Visible"/>
                                    </Trigger>
                                    <Trigger Property="Text" Value="{x:Null}">
                                        <Setter TargetName="Watermark" Property="Visibility" Value="Visible"/>
                                    </Trigger>
                                    <Trigger Property="IsKeyboardFocused" Value="True">
                                        <Setter TargetName="Watermark" Property="Visibility" Value="Collapsed"/>
                                    </Trigger>
                                    <Trigger Property="Text" Value="{x:Static sys:String.Empty}">
                                        <Setter TargetName="Watermark" Property="Visibility" Value="Visible"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>


                <!-- ========== PASSWORDBOX ========== -->
                <Style TargetType="PasswordBox" x:Key="PasswordInput">
                    <Setter Property="Height" Value="45"/>
                    <Setter Property="Padding" Value="10"/>
                    <Setter Property="BorderBrush" Value="#d1d1d1"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="FontSize" Value="14"/>
                </Style>

            </Grid.Resources>


            <!-- ====================== CONTENIDO ====================== -->
            <StackPanel>

                <!-- LOGO -->
                <StackPanel HorizontalAlignment="Center" Margin="0,10">
                    <TextBlock Text="CBA"
                               FontSize="50"
                               FontWeight="Bold"
                               Foreground="#ec1313"/>
                </StackPanel>


                <!-- TARJETA -->
                <Border Background="White"
                        CornerRadius="20"
                        Padding="30"
                        BorderBrush="#d1d1d1"
                        BorderThickness="1">

                    <StackPanel>

                        <TextBlock Text="Welcome back"
                                   FontSize="28"
                                   FontWeight="Black"
                                   HorizontalAlignment="Center"/>

                        <TextBlock Text="Log in to your account to continue"
                                   Foreground="Gray"
                                   FontSize="12"
                                   Margin="0,6,0,25"
                                   TextAlignment="Center"/>


                        <!-- EMAIL -->
                        <TextBlock Text="Email"
                                   FontWeight="Medium"
                                   Margin="0,0,0,5"/>

                        <TextBox x:Name="txtEmail"
                                 Style="{StaticResource WatermarkTextBox}"/>


                        <!-- PASSWORD -->
                        <TextBlock Text="Password"
                                   FontWeight="Medium"
                                   Margin="15,10,0,5"/>

                        <!-- Password con ojito -->
                        <Grid>

                            <!-- Password oculto -->
                            <PasswordBox x:Name="txtPasswordHidden"
                                         Style="{StaticResource PasswordInput}"/>

                            <!-- Password visible -->
                            <TextBox x:Name="txtPasswordVisible"
                                     Visibility="Collapsed"
                                     Style="{StaticResource WatermarkTextBox}"/>

                            <!-- Botón ojito -->
                            <Button x:Name="btnShowPassword"
                                    Width="40" Height="40"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    FontSize="18"
                                    Content="👁"
                                    Click="btnShowPassword_Click"/>
                        </Grid>

                        <!-- Forgot Password -->
                        <TextBlock Text="Forgot Password?"
                                   Foreground="#ec1313"
                                   FontSize="13"
                                   HorizontalAlignment="Right"
                                   Margin="0,8,0,0"
                                   TextDecorations="Underline"
                                   Cursor="Hand"/>


                        <!-- LOGIN BUTTON -->
                        <Button Content="Login"
        Style="{StaticResource PrimaryButton}"
        Click="LoginButton_Click"/>
                    </StackPanel>

                </Border>


                <!-- FOOTER (Sign Up) -->
                <TextBlock TextAlignment="Center"
                           Margin="0,20,0,0">
                    Don't have an account?
                    <Run Text=" Sign Up"
                         Foreground="#ec1313"
                         FontWeight="Bold"
                         Cursor="Hand"
                         MouseLeftButtonUp="NavigateToRegister_MouseLeftButtonUp"/>
                </TextBlock>

            </StackPanel>

        </Grid>

    </ScrollViewer>

</Window>
