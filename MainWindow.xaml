<Window x:Class="HOLACHICOS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HOLACHICOS"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Create Your Account - CBA" Height="780.314" Width="480"
        WindowStartupLocation="CenterScreen"
        Background="#f8f6f6">

    <ScrollViewer VerticalScrollBarVisibility="Auto">

        <Grid Margin="25">

            <Grid.Resources>

                <!-- COLOR PRINCIPAL -->
                <SolidColorBrush x:Key="PrimaryColor" Color="#ec1313"/>

                <!-- ESTILO BOTÓN PRINCIPAL -->
                <Style TargetType="Button" x:Key="PrimaryButton">
                    <Setter Property="Background" Value="#ec1313"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="FontSize" Value="16"/>
                    <Setter Property="Height" Value="45"/>
                    <Setter Property="Margin" Value="0,10,0,0"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="10"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>

                <!-- WATERMARK PARA TEXTBOX -->
                <Style x:Key="WatermarkTextBox" TargetType="TextBox">
                    <Setter Property="Height" Value="40"/>
                    <Setter Property="Padding" Value="10"/>
                    <Setter Property="BorderBrush" Value="#d1d1d1"/>
                    <Setter Property="Background" Value="#f0f0f0"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TextBox">
                                <Grid>
                                    <ScrollViewer x:Name="PART_ContentHost"/>
                                    <TextBlock x:Name="Watermark"
                                               Text="{TemplateBinding Tag}"
                                               Foreground="Gray"
                                               Margin="10,0,0,0"
                                               VerticalAlignment="Center"
                                               Opacity=".6"
                                               IsHitTestVisible="False"/>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="Text" Value="">
                                        <Setter TargetName="Watermark" Property="Visibility" Value="Visible"/>
                                    </Trigger>
                                    <Trigger Property="Text" Value="{x:Null}">
                                        <Setter TargetName="Watermark" Property="Visibility" Value="Visible"/>
                                    </Trigger>
                                    <Trigger Property="IsKeyboardFocused" Value="True">
                                        <Setter TargetName="Watermark" Property="Visibility" Value="Collapsed"/>
                                    </Trigger>
                                    <Trigger Property="Text" Value="{x:Static sys:String.Empty}">
                                        <Setter TargetName="Watermark" Property="Visibility" Value="Visible"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>

                <!-- ESTILO PASSWORDBOX -->
                <Style TargetType="PasswordBox">
                    <Setter Property="Height" Value="40"/>
                    <Setter Property="Padding" Value="10"/>
                    <Setter Property="BorderBrush" Value="#d1d1d1"/>
                    <Setter Property="Background" Value="#f0f0f0"/>
                </Style>

            </Grid.Resources>


            <StackPanel>

                <!-- LOGO -->
                <StackPanel HorizontalAlignment="Center" Margin="0,10">
                    <TextBlock Text="CBA"
                               FontSize="40"
                               FontWeight="Bold"
                               Foreground="#ec1313"/>
                </StackPanel>

                <!-- CARD -->
                <Border Background="White"
                        CornerRadius="15"
                        Padding="25"
                        BorderBrush="#d1d1d1"
                        BorderThickness="1" Height="572">

                    <StackPanel>

                        <!-- TITLE -->
                        <TextBlock Text="Create Your Account"
                                   FontSize="28"
                                   FontWeight="Black"
                                   HorizontalAlignment="Center"/>

                        <TextBlock Text="Join CBA and start your English learning journey today."
                                   Foreground="Gray"
                                   FontSize="12"
                                   Margin="0,6,0,20"
                                   TextAlignment="Center"/>

                        <!-- FULL NAME -->
                        <TextBlock Text="Full Name" FontWeight="Medium"/>
                        <TextBox x:Name="txtFullName"
                                 Style="{StaticResource WatermarkTextBox}"/>

                        <!-- EMAIL -->
                        <TextBlock Text="Email Address" Margin="0,10,0,0" FontWeight="Medium"/>
                        <TextBox x:Name="txtEmail"
                                 Style="{StaticResource WatermarkTextBox}"/>

                        <!-- PASSWORD -->
                        <TextBlock Text="Create Password" Margin="0,10,0,0" FontWeight="Medium"/>

                        <Grid>
                            <TextBox x:Name="txtPasswordVisible"
                                     Visibility="Collapsed"
                                     Style="{StaticResource WatermarkTextBox}"/>

                            <PasswordBox x:Name="txtPasswordHidden" Margin="0,40,-0.2,-40"/>

                            <!-- BOTÓN OJO -->
                            <Button x:Name="btnShowPassword"
                                    Width="40" Height="40"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    FontSize="18"
                                    Content="👁"
                                    Click="btnShowPassword_Click"/>
                        </Grid>

                        <TextBlock Text="Minimum 8 characters"
                                   Foreground="Gray"
                                   FontSize="11"
                                   Margin="0,5"/>
                        <Button Content="Register"
                                Style="{StaticResource PrimaryButton}"
                                Click="Register_Click" 
                                Margin="90" 
                                Height="49"/>

                        <!-- REGISTER BUTTON -->

                    </StackPanel>

                </Border>

                <!-- FOOTER -->
                <TextBlock TextAlignment="Center"
                           Margin="0,20,0,0">
                    Already have an account?
                   <!-- AÑADIDO: Evento MouseLeftButtonUp al Run "Log in" -->
                    <Run Text=" Log in"
                         Foreground="#ec1313"
                         FontWeight="Bold"
                         Cursor="Hand"
                         MouseLeftButtonUp="NavigateToLogin_MouseLeftButtonUp"/>
                </TextBlock>

            </StackPanel>

        </Grid>

    </ScrollViewer>

</Window>
